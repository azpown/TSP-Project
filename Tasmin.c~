#include <stdio.h>
#include <stdlib.h>

struct Voisin{
  int indice;
  long distance; 
}; 




struct Ville{
  long taille_max;
  void ** distance; 
}; 

struct Ville TasVille(size_t t_max){ 
  struct Ville v;    //Création du tas min
  v.taille_max=t_max; //initialise le tas au nombre maximum d'élément.Allouer taille_max cases de taille sizeof(void *) .Mettre toute cette zone à 0 (calloc et non malloc)
  v.distance=(void **)calloc(v.taille_max,sizeof(void *));
  return v;
}

void SupprimerTasVille(struct Ville v){
  for(unsigned int i=0;i<v.taille_max;++i){  //Si la case i contient une adresse non nulle on supprime le contenu
    if (v.distance[i])
      free(v.distance[i]);
  }                                          //Maintenant que le tableau est vide,on supprime le tableau
  free(v.distance);
}

