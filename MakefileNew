PREFIX=.
LIBDIR = $(PREFIX)/lib

#les fichiers objets a generer 
OBJ= input.o manipgraph.o



Voyager:$(OBJ)
	$(CC) $(OBJ) $(LDFLAGS) -o Voyager

#les d√©pendances des fichiers objets

input.o: bin/input.c bin/input.h
	$(CC) -c bin/input.c

manipgraph.o: graphic/manipgraph.c graphic/manipgraph.h
	$(CC) -c graphic/manipgraph.c
	
#all:
#	for i in */ ; do make -C $$i ;
#	do make -C $$i ;
#	done

libmatrice.a :manipgraph.o input.o
	for i in */ ; do make -C $$i ; done
	ar -cr matrice.a input.o manipgraph.o

install:
	mv libmatrice.a $(PREFIX)/lib
	cp input.h $(PREFIX)/bin
	cp manipgraph.h $(PREFIX)/graphic


